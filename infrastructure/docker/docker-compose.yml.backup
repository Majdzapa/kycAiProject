version: '3.8'

services:
  # PostgreSQL with pgvector extension
  postgres:
    image: ankane/pgvector:latest
    container_name: kyc-postgres
    environment:
      POSTGRES_USER: kyc_user
      POSTGRES_PASSWORD: ${DB_PASSWORD:-secure_password}
      POSTGRES_DB: kyc_db
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./init-scripts:/docker-entrypoint-initdb.d
    ports:
      - "5432:5432"
    networks:
      - kyc-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U kyc_user -d kyc_db"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Ollama for local LLM inference
  ollama:
    image: ollama/ollama:latest
    container_name: kyc-ollama
    volumes:
      - ollama_data:/root/.ollama
    ports:
      - "11434:11434"
    networks:
      - kyc-network
    # GPU support (optional but recommended)
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: 1
              capabilities: [gpu]
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:11434/api/tags"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Pull models automatically
  ollama-pull:
    image: ollama/ollama:latest
    container_name: ollama-pull
    volumes:
      - ollama_data:/root/.ollama
    entrypoint: >
      sh -c "
        sleep 10 &&
        ollama pull llama3.2 &&
        ollama pull nomic-embed-text &&
        ollama pull llava-phi3
      "
    depends_on:
      - ollama
    networks:
      - kyc-network

  # MinIO for document storage
  minio:
    image: minio/minio:latest
    container_name: kyc-minio
    command: server /data --console-address ":9001"
    environment:
      MINIO_ROOT_USER: ${MINIO_USER:-minioadmin}
      MINIO_ROOT_PASSWORD: ${MINIO_PASSWORD:-minioadmin}
    volumes:
      - minio_data:/data
    ports:
      - "9000:9000"
      - "9001:9001"
    networks:
      - kyc-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 10s
      retries: 3

  # RabbitMQ for message queue
  rabbitmq:
    image: rabbitmq:3-management-alpine
    container_name: kyc-rabbitmq
    environment:
      RABBITMQ_DEFAULT_USER: ${RABBITMQ_USER:-guest}
      RABBITMQ_DEFAULT_PASS: ${RABBITMQ_PASS:-guest}
    ports:
      - "5672:5672"
      - "15672:15672"
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    networks:
      - kyc-network

  # Spring Boot Application
  kyc-service:
    build:
      context: ../../kyc-service
      dockerfile: Dockerfile
    container_name: kyc-service
    environment:
      SPRING_PROFILES_ACTIVE: docker
      SPRING_DATASOURCE_URL: jdbc:postgresql://postgres:5432/kyc_db
      SPRING_DATASOURCE_USERNAME: kyc_user
      SPRING_DATASOURCE_PASSWORD: ${DB_PASSWORD:-secure_password}
      OLLAMA_BASE_URL: http://ollama:11434
      MINIO_ENDPOINT: http://minio:9000
      MINIO_ACCESS_KEY: ${MINIO_USER:-minioadmin}
      MINIO_SECRET_KEY: ${MINIO_PASSWORD:-minioadmin}
      RABBITMQ_HOST: rabbitmq
      RABBITMQ_PORT: 5672
      RABBITMQ_USER: ${RABBITMQ_USER:-guest}
      RABBITMQ_PASS: ${RABBITMQ_PASS:-guest}
      # GDPR settings
      GDPR_DATA_RETENTION_DAYS: 90
      GDPR_ANONYMIZATION_ENABLED: true
      GDPR_ENCRYPTION_KEY: ${GDPR_ENCRYPTION_KEY:-change-me-in-production-32chars!}
      # JWT settings
      JWT_SECRET: ${JWT_SECRET:-my-super-secret-jwt-key-for-development-only}
    ports:
      - "8080:8080"
    depends_on:
      postgres:
        condition: service_healthy
      ollama:
        condition: service_healthy
      minio:
        condition: service_started
      rabbitmq:
        condition: service_started
    networks:
      - kyc-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8080/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Angular Frontend (Nginx)
  kyc-frontend:
    build:
      context: ../../kyc-frontend
      dockerfile: Dockerfile
    container_name: kyc-frontend
    ports:
      - "4200:80"
    depends_on:
      - kyc-service
    networks:
      - kyc-network

  # Prometheus for monitoring
  prometheus:
    image: prom/prometheus:latest
    container_name: kyc-prometheus
    volumes:
      - ./monitoring/prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus_data:/prometheus
    ports:
      - "9090:9090"
    networks:
      - kyc-network

  # Grafana for dashboards
  grafana:
    image: grafana/grafana:latest
    container_name: kyc-grafana
    environment:
      GF_SECURITY_ADMIN_PASSWORD: ${GRAFANA_PASSWORD:-admin}
      GF_USERS_ALLOW_SIGN_UP: false
    volumes:
      - grafana_data:/var/lib/grafana
      - ./monitoring/grafana/dashboards:/etc/grafana/provisioning/dashboards
      - ./monitoring/grafana/datasources:/etc/grafana/provisioning/datasources
    ports:
      - "3000:3000"
    networks:
      - kyc-network

volumes:
  postgres_data:
  ollama_data:
  minio_data:
  rabbitmq_data:
  prometheus_data:
  grafana_data:

networks:
  kyc-network:
    driver: bridge
